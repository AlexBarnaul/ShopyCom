article.card-show
	div.card-show__wrapper
		//img container
		div.card-show__img-container
			//big img
			div.card-show__img-box.card-show__img-box--big
				img.card-show__img(src="img/productShowBig.png" alt="parka")
			//small img
			div.card-show__img-box.card-show__img-box--small
				img.card-show__img.card-show__img--small(src="img/productShowSmall1.png" alt="parka")
			//small img
			div.card-show__img-box.card-show__img-box--small
				img.card-show__img.card-show__img--small(src="img/productShowSmall2.png" alt="parka")
			//small img
			div.card-show__img-box.card-show__img-box--small
				img.card-show__img.card-show__img--small(src="img/productShowSmall3.png" alt="parka")
		//---------img container end
		
		//description container
		div.card-show__description-container
			h2.card-show__title FULL WINTER KIT
			p.card-show__subtitle Half Jacket + Skiny Trousers + Boot leather
			p.card-show__text.
				Lorem Ipsum is simply dummy text of the printing and typesetting industry
				Lorem Ipsum is simply dummy text of the printing
				and typesetting industry
			//descriptions buttons
			form.card-show__form(action="#" method="get")
				div.card-show__description-inner
					//description size
					div.card-show__size
						span Choose Size
						input(type="radio" id="s" name="sizes" value="s" checked class="visually-hidden")
						input(type="radio" id="m" name="sizes" value="m" class="visually-hidden")
						input(type="radio" id="l" name="sizes" value="l" class="visually-hidden")
						input(type="radio" id="xl" name="sizes" value="xl" class="visually-hidden")
						label.card-show__label-size( for="s") s
						label.card-show__label-size( for="m") m
						label.card-show__label-size( for="l") l
						label.card-show__label-size( for="xl") xl
					//description quantity
					div.card-show__quantity
						span Choose Quantity
						div.card-show__counter-container
							button.card-show__counter-add(aria-label="add 1 unit" type="button")
							span.card-show__counter-field 3
							button.card-show__counter-remove(aria-label="remove 1 unit" type="button")
					//order and share
				div.card-show__order-bar
					span.card-show__price Price : 120$
					p.card-show__buttons
						a.card-show__link-share(href="#" aria-label="share")
							svg(width="18" height="18")
								use(class="card__share-img hovered-orange" xlink:href="#share-icon")
						button.card-show__add(type="button")
							svg(width="22" height="22")
								use(class="card__cart-img hovered-orange" xlink:href="#add-to-cart-icon")
						button.card-show__like(type="button")
							svg(width="20" height="20")
								use(class="card__like-img hovered-orange" xlink:href="#like-icon")
				button.card-show__submit Order Now
